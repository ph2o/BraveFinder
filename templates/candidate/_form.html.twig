{% block custom_script %}
    <script>
        Inputmask({
            mask: "*{1,20}[.*{1,20}][.*{1,20}][.*{1,20}]@*{1,20}[.*{2,6}][.*{1,2}]",
            greedy: false,
            onBeforePaste: function (pastedValue, opts) {
                pastedValue = pastedValue.toLowerCase();
                return pastedValue.replace("mailto:", "");
            },
            definitions: {
                "*": {
                    validator: '[0-9A-Za-z!#$%&"*+/=?^_`{|}~\-]',
                    cardinality: 1,
                    casing: "lower"
                }
            }
        }).mask("#mail");
        Inputmask({
            "mask": "999 999 99 99"
        }).mask("#phone");
        Inputmask({
            "mask": "999 999 99 99"
        }).mask("#mobile");
        Inputmask({
            "mask": "9999"
        }).mask("#zip");
        Inputmask({
            "mask": "CH99 9999 9999 9999 9999 *"
        }).mask("#Iban");
    </script>
{% endblock %}