{% extends 'base.html.twig' %}

{% block title %}BraveFinder : Liste des candidats{% endblock %}
{% block header_title %}{{ 'Candidat'|trans }}{% endblock %}
{% block header_subtitle %}{{ 'Candidat list'|trans }}{% endblock %}

{% block content %}
    <div class="row gy-5 g-xl-12">
        <div class="col-xl-12">
            <div class="card mb-5 mb-xl-12">
                <div class="card-header border-0 pt-5">
                    <div class="card-title align-items-start flex-column">
                        <div class="d-flex align-items-center position-relative my-1">
                                        <span class="icon position-absolute ms-6">
													 <i class="bi bi-search"></i>
												</span>
                            <input type="text" data-kt-user-table-filter="search"
                                   class="form-control form-control-solid w-250px ps-14"
                                   placeholder="{{ "Search candidat"|trans }}"/>
                        </div>
                    </div>
                    <div class="card-toolbar" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-trigger="hover" title="" data-bs-original-title="{{ 'Click to add a new candidate'|trans }}">
                        <a href="{{ path('candidate.new') }}" class="btn btn-sm btn-primary" >
                            <i class="fa fa-plus"></i>
                            {{ 'Add candidate'|trans }}</a>
                    </div>
                </div>
                <div class="card-body py-3">
                    <div class="table-responsive">
                        <table class="table align-middle table-row-dashed fs-6 gy-5" id="candidat_list">
                            <thead>
                            <tr class="text-start text-gray-400 fw-bolder fs-7 text-uppercase gs-0">
                                <th class="min-w-125px">{{ 'Name'|trans }}</th>
                                <th class="min-w-150px mw-125px text-left">{{ 'Practices'|trans }}</th>
                                <th class="min-w-150px mw-125px text-left">{{ 'Average grade'|trans }}</th>
                                <th class="min-w-50px text-center">{{ 'On Site'|trans }}</th>
                                <th class="min-w-50px text-center">{{ 'Engaged'|trans }}</th>
                                <th class="text-end min-w-125px">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="text-gray-600 fw-bold">
                            {% for candidate in candidates %}
                                {% set picture = candidate.picture? vich_uploader_asset(candidate, 'pictureFile'):asset('media/avatars/blank.png')  %}
                                <tr>
                                    <td class="d-flex align-items-center">
                                        <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
                                            <div class="symbol-label">
                                                <img src="{{ picture | imagine_filter('image_thumb') }}"
                                                     class="w-100"
                                                     alt="{{ candidate.firstname ~ ' ' ~ candidate.name }}"/>
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <span class="text-gray-800 text-hover-primary mb-1">{{ candidate.firstname ~ ' ' ~ candidate.name }}</span>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                        {% set progress = 0 %}
                                        {% set rate = 0 %}
                                        {% for c in candidate.getEvaluations  %}
                                            {% if c.validate %}
                                                {% set progress = progress + 1  %}
                                            {% endif %}
                                            {% if c.rate %}
                                                {% set rate = rate + c.rate %}
                                            {% endif %}
                                        {% endfor %}
                                        {% set total = (progress*100/candidate.getEvaluations|length)|round %}

                                        <div class="d-flex flex-column w-100 me-2">
                                            <div class="d-flex flex-stack mb-2">
                                                <span class="text-muted me-2 fs-7 fw-bold">{{ progress ~'/'~ candidate.getEvaluations|length }}</span>
                                            </div>
                                            <div class="progress h-10px w-100">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: {{ total }}%" aria-valuenow="{{ total }}" aria-valuemin="0" aria-valuemax="100">{{ total }}%</div>
                                            </div>
                                        </div>
                                    </td>

                                    <td class="text-center">
                                         {% set average = (rate/candidate.getEvaluations|length)|round %}
                                        {% set total = (average*100/5)|round %}
                                         {{ average ~ '/5'  }} </td>
                                    <td class="text-center">
                                        <span><i class="fa fa-{{ candidate.onSite? 'check text-success':'times text-warning' }}"></i></span>
                                    </td>
                                    <td class="text-center">
                                        <span><i class="fa fa-{{ candidate.engaged? 'check text-success':'times text-warning' }}"></i></span>
                                    </td>

                                    <td class="text-end">
                                        <a href="{{ path('secretariat.administratif.edit', {'id': candidate.id}) }}"
                                           class="btn btn-sm btn-light-primary">
                                            <i class="fa fa-file-alt"></i>
                                            {{ 'Edition'|trans }}</a>
                                        <form method="post" action="{{ path('candidate.delete',{id: candidate.id}) }}"
                                              style="display: inline-block"
                                              onsubmit="return confirm('Voulez-vous supprimer cet élément ?');">
                                            <input name="_method" type="hidden" value="DELETE"/>
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('candidate.delete' ~ candidate.id) }}"/>
                                            <button class="btn btn-sm btn-light-danger">
                                                <i class="fas fa-trash-alt"></i>
                                                {{ 'Delete'|trans }}</button>
                                        </form>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">Pas d'enregistrement</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

