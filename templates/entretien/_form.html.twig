{{ form_start(form) }}

<div class="row mb-6">
    <label class="col-lg-4 col-form-label fw-bold fs-6">{{ 'Rating'|trans }}</label>
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-6 fv-row fv-plugins-icon-container">
                <div class="rating">
                    {% for i in 1..5 %}
                        {% set checked = 'checked="checked"' %}
                        {% set rate = evaluation.rate?evaluation.rate:1 %}
                        <label class="rating-label" for="kt_rating_input_{{ i }}">
                            <i class="bi bi-star-fill fs-1"></i>
                        </label>
                        <input class="rating-input" name="rating" value="{{ i }}" {{ i == rate?checked }} type="radio"
                               id="kt_rating_input_{{ i }}"/>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-6">
    <label class="col-lg-4 col-form-label fw-bold fs-6">{{ form_label(form.comment) }}</label>
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-12 fv-row fv-plugins-icon-container">
                {{ form_widget(form.comment, {'attr': {'class': 'form-control-lg form-control-solid mb-3 mb-lg-0'}}) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-6">
    <label class="col-lg-4 col-form-label fw-bold fs-6 required">{{ 'Enterviewers'|trans }}</label>
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-6 fv-row fv-plugins-icon-container">
                {{ form_widget(form.interviewer_1, {'attr': {'class': 'form-select form-select-solid form-select-lg fw-bold'}}) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
            <div class="col-lg-6 fv-row fv-plugins-icon-container">
                {{ form_widget(form.interviewer_2, {'attr': {'class': 'form-select form-select-solid form-select-lg fw-bold'}}) }}
                <div class="fv-plugins-message-container invalid-feedback"></div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-6">
    <label class="col-lg-4 col-form-label fw-bold fs-6">{{ 'Validation'|trans }}</label>
    <div class="col-lg-8">
        <div class="row">
            <div class="col-lg-6 fv-row fv-plugins-icon-container">
                <div class="form-check form-switch form-check-custom form-check-solid">
                    {{ form_widget(form.validate, {'attr': {'class': 'form-check-input'}}) }}
                </div>
                <div class="form-text">{{ form_help(form.validate) }}</div>
                <div class="fv-plugins-message-container invalid-feedback">{{ form_errors(form.validate) }}</div>
            </div>
        </div>
    </div>
</div>


{{ form_errors(form) }}


<div class="card-footer d-flex justify-content-end py-6 px-9">
    <button class="btn btn-primary">{{ 'Save changes'|trans }}</button>
</div>
{{ form_end(form) }}
