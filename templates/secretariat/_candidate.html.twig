<div class="card mb-6">
    <div class="card-body pt-9 pb-0 ribbon ribbon-top">
        <div class="ribbon-label bg-{{ candidate.engaged?'success': 'warning' }}">{{ candidate.engaged?'Engaged'|trans: 'Not engaged'|trans }}</div>
        <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
            <div class="me-7 mb-4">
                <div class="symbol symbol-100px symbol-lg-160px symbol-fixed position-relative">
                    {% set picture = candidate.picture? vich_uploader_asset(candidate, 'pictureFile'):asset('media/avatars/blank.png') %}
                    <img class="avatar"
                         src="{{ picture | imagine_filter('image_med_thumb') }}"
                         alt="{{ candidate.name }} {{ candidate.firstname }}"/>
                    <div id="on-site-circle"
                         class="position-absolute translate-middle bottom-0 start-100 mb-6 {{ candidate.onSite?'bg-success':'bg-warning' }} rounded-circle border border-4 border-white h-20px w-20px"></div>
                </div>
            </div>
            <div class="flex-grow-1">
                <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
                    <div class="d-flex flex-column">
                        <div class="d-flex align-items-center mb-2">
                            <span class="text-gray-800 text-hover-primary fs-2 fw-bolder me-1">{{ candidate.name }} {{ candidate.firstname }}</span>
                        </div>
                        <div class="d-flex flex-wrap fw-bold fs-6 mb-4 pe-2">
                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                <span class="icon me-1"><i class="bi bi-person-fill fs-4"></i></span>
                                {{ candidate.birthdate|date('d. m. Y') }} ({{ candidate.age }})</a>
                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary me-5 mb-2">
                                <span class="icon me-1"><i class="bi bi-pin-angle-fill fs-4"></i></span>
                                {{ candidate.station }}</a>
                            <a href="#" class="d-flex align-items-center text-gray-400 text-hover-primary mb-2">
                                <span class="icon me-1"><i class="bi bi-at fs-4"></i></span>
                                {{ candidate.mail }}</a>
                        </div>
                    </div>
                    <div class="d-flex my-4">
                        {% if is_granted('ROLE_ADMIN') %}
                            <div class="form-check form-switch form-check-custom form-check-solid mx-4">
                                <input class="form-check-input" type="checkbox" value=""
                                       id="toogle-on-site" {{ candidate.onSite?'checked="checked"' }}
                                       data-url="{{ path('candidate.toole.status', {'id':candidate.id, 'token': csrf_token('candidate.status' ~ candidate.id)}) }}"/>
                                <label class="form-check-label" for="toogle-on-site">
                                    {{ 'On site'|trans }}
                                </label>
                            </div>
                            <div class="me-0">
                                <button class="btn btn-sm btn-icon btn-bg-light btn-active-color-primary"
                                        data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end"
                                        data-kt-menu-flip="top-end">
                                    <i class="bi bi-three-dots fs-3"></i>
                                </button>
                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-bold w-200px py-3"
                                     data-kt-menu="true">
                                    <div class="menu-item px-3">
                                        <div class="menu-content text-muted pb-2 px-3 fs-7 text-uppercase">{{ 'Profile'|trans }}</div>
                                    </div>
                                    <div class="menu-item px-3">
                                        <a href="{{ path('main.generatePdf.candidate', {'id': candidate.id}) }}" target="_blank" class="menu-link px-3">{{ 'Print report'|trans }}</a>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="d-flex flex-wrap flex-stack">
                    <div class="d-flex flex-column flex-grow-1 pe-8">
                        <div class="d-flex flex-wrap">
                            <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                                <div class="d-flex align-items-center">
                                    <span class="svg-icon svg-icon-3 svg-icon-success me-2">
																		<svg xmlns="http://www.w3.org/2000/svg"
                                                                             xmlns:xlink="http://www.w3.org/1999/xlink"
                                                                             width="24px" height="24px"
                                                                             viewBox="0 0 24 24" version="1.1">
																			<g stroke="none" stroke-width="1"
                                                                               fill="none" fill-rule="evenodd">
																				<polygon points="0 0 24 0 24 24 0 24"/>
																				<rect fill="#000000" opacity="0.5"
                                                                                      x="11" y="5" width="2" height="14"
                                                                                      rx="1"/>
																				<path d="M6.70710678,12.7071068 C6.31658249,13.0976311 5.68341751,13.0976311 5.29289322,12.7071068 C4.90236893,12.3165825 4.90236893,11.6834175 5.29289322,11.2928932 L11.2928932,5.29289322 C11.6714722,4.91431428 12.2810586,4.90106866 12.6757246,5.26284586 L18.6757246,10.7628459 C19.0828436,11.1360383 19.1103465,11.7686056 18.7371541,12.1757246 C18.3639617,12.5828436 17.7313944,12.6103465 17.3242754,12.2371541 L12.0300757,7.38413782 L6.70710678,12.7071068 Z"
                                                                                      fill="#000000"
                                                                                      fill-rule="nonzero"/>
																			</g>
																		</svg>
																	</span>
                                    {% set progress = 0 %}
                                    {% set rate = 0 %}
                                    {% for c in candidate.getEvaluations %}
                                        {% if c.validate %}
                                            {% set progress = progress + 1 %}
                                        {% endif %}
                                        {% if c.rate %}
                                            {% set rate = rate + c.rate %}
                                        {% endif %}
                                    {% endfor %}
                                    {% set average = (rate/candidate.getEvaluations|length)|round %}
                                    {% set total = (average*100/5)|round %}
                                    <div class="fs-2 fw-bolder" data-kt-countup="true"
                                         data-kt-countup-value="{{ total }}"
                                         data-kt-countup-prefix="%">0
                                    </div>
                                </div>
                                <div class="fw-bold fs-6 text-gray-400">{{ 'Practice Rate'|trans }}</div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex align-items-center w-200px w-sm-300px flex-column mt-3">
                        <div class="d-flex justify-content-between w-100 mt-auto mb-2">
                            <span class="fw-bold fs-6 text-gray-400">{{ 'Profile Compleation'|trans }}</span>
                            <span class="fw-bolder fs-6">{{ total_profile|round }}%</span>
                        </div>
                        <div class="h-5px mx-3 w-100 bg-light mb-3">
                            <div class="bg-success rounded h-5px" role="progressbar"
                                 style="width: {{ total_profile|round }}%;"
                                 aria-valuenow="{{ total_profile|round }}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex overflow-auto h-55px">
            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder flex-nowrap">
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SECRETARIAT') %}
                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6 active" data-bs-toggle="tab"
                           href="#tab-administration">{{ 'Administration'|trans }}</a>
                    </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MESURE') %}
                    <li class="nav-item">
                        <a class="nav-link text-active-primary me-6 {{ is_granted('ROLE_MESURE'? 'active') }}" data-bs-toggle="tab"
                           href="#tab-measurements">{{ 'Measurements'|trans }}</a>
                    </li>
                {% endif %}
                {% for evaluation in candidate.evaluations %}
                    {% if is_granted('ROLE_ADMIN') or is_granted(evaluation.practice.groupAllowed) %}
                        <li class="nav-item">
                            <a class="nav-link text-active-primary me-6" data-bs-toggle="tab"
                               href="#tab-practice_{{ evaluation.practice.id }}">{{ evaluation.practice }}</a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<div class="tab-content">
    <div class="tab-pane fade show active" id="tab-administration">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_SECRETARIAT') %}
            {% include 'secretariat/_profile.form.html.twig' %}
        {% endif %}
    </div>
    <div class="tab-pane fade {{ is_granted('ROLE_MESURE'? 'show active') }}" id="tab-measurements">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MESURE') %}
            {% include 'secretariat/_mesure.form.html.twig' %}
        {% endif %}
    </div>
    {% for evaluation in candidate.evaluations %}
        <div class="tab-pane fade" id="tab-practice_{{ evaluation.practice.id }}">
            <div class="card card-xxl-stretch mb-5 mb-xxl-10">
                <div class="card-header">
                    <div class="card-title">
                        <h3>{{ evaluation.practice }}</h3>
                    </div>
                    <div class="card-toolbar m-0">
                        <div class="rating">
                            {% for i in 1..5 %}
                                <div class="rating-label me-2 {{ i <= evaluation.rate? 'checked' }}">
                                    <i class="bi bi-star-fill fs-1"></i>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                <div class="card-body pb-0 min-h-350px">
                    <p class="fs-5 fw-bold text-gray-600 pb-5">{{ evaluation.comment }}</p>
                </div>
            </div>
        </div>
        {% else %}
        <p class="text-info">{{ 'no_evaluation_yet'|trans }}</p>
    {% endfor %}
</div>
{% block custom_scripts %}
    <script>
        $('#toogle-on-site').on('click', function () {
            var input = $(this);
            $.ajax({
                method: "POST",
                url: input.data('url'),
                dataType: "json"
            })
                .done(function (data) {
                    var selector = $('#on-site-circle');
                    if (data.on_site) {
                        selector.addClass('bg-success').removeClass('bg-warning');
                        toastr.success("Candidate is on site", "Success");
                        return;
                    }
                    selector.addClass('bg-warning').removeClass('bg-success');
                    toastr.success("Candidate is off site", "warning");
                });
        })
    </script>
{% endblock %}
