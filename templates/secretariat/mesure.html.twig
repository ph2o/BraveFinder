{% extends 'base.html.twig' %}
{% block title %}BraveFinder : Secr√©tariat
{% endblock %}
{% block content %}
	<div class="jumbotron text-center">
		<h1>Mesures</h1>
		<div class="container">
			{{form_start(form)}}
			<div class="form-row">
				<div class="col-sd-7"></div>
				{{form_row(form.candidateSearch)}}
				<button class="btn btn-primary">
					<span class="d-sm-none">
						<i class="fas fa-search"></i>
					</span>
					<span class="d-none d-sm-block d-md-none">{{button_label|default('Rechercher')}}</span>
				</button>
			</div>
			{{form_end(form)}}
		</div>
	</div>
	<div class="container body-container">
		<div class="row">
			<div class="col-sm-12" id="main">
				<table class="table">
					<tbody>
						{% for candidate in candidates %}
							<tr>
								<td class="col-sm-1">
									<a href="{{ path('secretariat.mesure.edit', {'id': candidate.id}) }}" class="href">

										<img class="avatar" src="{{ vich_uploader_asset(candidate, 'pictureFile') | imagine_filter('image_thumb') }}" alt="{{ candidate.name }} {{ candidate.firstname }}"/>
									</a>
								</td>
								<td class="col-sm-7 align-middle h5">
									<a href="{{ path('secretariat.mesure.edit', {'id': candidate.id}) }}" class="href">
										{{ candidate }}
									</a>
								</td>
								<td class="col-sm-4 align-middle">
									<a href="{{ path('secretariat.mesure.edit', {'id': candidate.id}) }}">
										<button class="btn btn-info">
											<span class="d-sm-none">
												<i class="fas fa-ruler"></i>
											</span>
											<span class="d-none d-sm-block">Gestion des mesures</span>
										</button>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">Pas d'enregistrement</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
